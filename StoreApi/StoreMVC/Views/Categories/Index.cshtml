
@{
    ViewData["Title"] = "Index";
    int count = 0;
}
@model CategoryListDto
<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model.Items)
                    {
                        <tr>
                            <th scope="row">@count</th>
                            <td>@category.Id</td>
                            <td>@category.Name</td>
                            <td>
                                <a asp-action="Edit" asp-route-Id="@category.Id" class="btn btn-warning">Edit</a>
                                <a asp-action="Delete" asp-route-Id="@category.Id" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                   

                </tbody>
            </table>
        </div>
    </div>
</div>


